services:
  app:
    container_name: stockmarket_app
    build:
      context: ./app
      dockerfile: Dockerfile
    ports:
      - "8000:8000"
    depends_on:
      - timescaledb
      - redis
    env_file:
      - .env
    environment:
      DATABASE_URL: postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@timescaledb:5432/${POSTGRES_DB}
      REDIS_URL: redis://:${REDIS_PASSWORD}@redis:6379/0
    volumes:
      - ./app/src:/usr/src/app/src
    networks:
      - stockmarket_network

  timescaledb:
    container_name: stockmarket_db
    image: timescale/timescaledb:latest-pg16
    restart: always
    env_file:
      - .env
    ports:
      - "5432:5432"
    volumes:
      - timescale_data:/var/lib/postgresql/data
    networks:
      - stockmarket_network

  pgadmin:
    container_name: stockmarket_pgadmin
    image: dpage/pgadmin4:latest
    restart: always
    env_file:
      - .env
    environment:
      PGADMIN_DEFAULT_EMAIL: ${PGADMIN_EMAIL}
      PGADMIN_DEFAULT_PASSWORD: ${PGADMIN_PASSWORD}
    ports:
      - "5050:80"
    depends_on:
      - timescaledb
    networks:
      - stockmarket_network

  redis:
    container_name: stockmarket_redis
    image: redis:latest
    command: redis-server --requirepass ${REDIS_PASSWORD}
    restart: always
    env_file:
      - .env
    ports:
      - "6379:6379"
    volumes:
      - redis_data:/data
    networks:
      - stockmarket_network

volumes:
  timescale_data:
  redis_data:

networks:
  stockmarket_network:
    driver: bridge
